{% if reviews %}
{% for review in reviews %}
<table class="table table-striped table-bordered">
  <tr>
    <td style="width: 50%;"><strong>{{ review.author }}</strong></td>
    <td class="text-right">{{ review.date_added }}</td>
  </tr>
  <tr>
    <td colspan="2"><p>{{ review.text }}</p>
      <div class="rating">
      <div class="rating-stars">
      {% for i in 1..5 %}
      {% if review.rating < i %} <span class="fa fa-stack"><em class="fa fa-star-o fa-stack-2x"></em></span> {% else %} <span class="fa fa-stack"><em class="fa fa-star fa-stack-2x"></em><em class="fa fa-star-o fa-stack-2x"></em></span> {% endif %}
      {% endfor %}
      </div>
      </div>
    </td>
  </tr>
</table>
{% endfor %}
<div class="pagination-results">
  <div class="text-left">{{ pagination }}</div>
</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %}
