						{{ t('Available filter groups are...')|replace({"%filter_page_url%": filter_page_url}) }}
						<br /><br />
						<table class="table table-condensed table-striped table-hover">
							<thead>
								<tr>
									<td class="left" width="25%">{{ t('Filter Group') }}</td>
									<td>{{ t('Column in File') }}</td>
									<td width="50%">{{ t('Notes') }}</td>
								</tr>
							</thead>

							<tbody>
							{% for fk,fv in matches['filter_groups'] %} 
								<tr>
									<td width="25%"><label class="control-label">{{ fv['name'] }}</label></td>
									<td>
												  <select name="filter_groups[{{ fv.filter_group_id }}]" class="form-select" autocomplete="off">
													{% for key,column in columns %}
													<option value="{{ key }}" {% if key == fv['column'] %} selected="selected" {% endif %}>{{ column }} {% if column in replacement_columns %} (#RPL) {% endif %}</option>
													{% endfor %}
												  </select>												
									</td>
									<td width="50%">&nbsp;</td>
								</tr>
							{% endfor %} 
							</tbody>
						</table>
