{{ header }}
{% if journal3.get('pageTitlePosition') == 'top' %}
  <h1 class="title page-title {{ journal3.get('title_color_scheme') }}"><span class="page-title-text">{{ heading_title }}</span></h1>
{% endif %}
<div class="breadcrumbs {{ journal3.get('breadcrumbs_color_scheme') }}">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
</div>
{{ journal3_top }}
<div id="account-subscription" class="container">
  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
      {% if journal3.get('pageTitlePosition') == 'default' %}
        <h1 class="title page-title {{ journal3.get('title_color_scheme') }}">{{ heading_title }}</h1>
      {% endif %}
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-start" colspan="2">{{ text_subscription_detail }}</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-start" style="width: 50%;"><b>{{ text_subscription_id }}</b> #{{ subscription_id }}
                <br/>
                <b>{{ text_date_added }}</b> {{ date_added }}
                <br/>
                <b>{{ text_status }}</b> {{ status }}
                <br/>
                <b>{{ text_payment_method }}</b> {{ payment_method }}</td>
              <td class="text-start" style="width: 50%;"><b>{{ text_order_id }}</b> <a href="{{ order }}">#{{ order_id }}</a>
                <br/>
                <b>{{ text_product }}</b> <a href="{{ product }}">{{ product_name }}</a>
                <br/>
                <b>{{ text_quantity }}</b> {{ product_quantity }}</td>
            </tr>
          </tbody>
        </table>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-start">{{ text_description }}</td>
              <td class="text-start">{{ text_reference }}</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-start" style="width: 50%;">{{ recurring_description }}</td>
              <td class="text-start" style="width: 50%;">{{ reference }}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <h3>{{ text_transaction }}</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-start">{{ column_date_added }}</td>
              <td class="text-start">{{ column_type }}</td>
              <td class="text-end">{{ column_amount }}</td>
            </tr>
          </thead>
          <tbody>
            {% if transactions %}
              {% for transaction in transactions %}
                <tr>
                  <td class="text-start">{{ transaction.date_added }}</td>
                  <td class="text-start">{{ transaction.type }}</td>
                  <td class="text-end">{{ transaction.amount }}</td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td colspan="3" class="text-center">{{ text_no_results }}</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>

      {{ recurring }}

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 
