{{ header }}
{% if journal3.get('pageTitlePosition') == 'top' %}
  <h1 class="title page-title {{ journal3.get('title_color_scheme') }}"><span class="page-title-text">{{ heading_title }}</span></h1>
{% endif %}
<div class="breadcrumbs {{ journal3.get('breadcrumbs_color_scheme') }}">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
</div>
{{ journal3_top }}
<div id="checkout-checkout" class="container">
  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
      {% if journal3.get('pageTitlePosition') == 'default' %}
        <h1 class="title page-title {{ journal3.get('title_color_scheme') }}">{{ heading_title }}</h1>
      {% endif %}
      <div class="row checkout-sections">
        <div class="col-md-7 mb-3 checkout-section checkout-section-start">

          {% if register %}
            <div id="checkout-register">{{ register }}</div>
          {% endif %}

          {% if payment_address %}
            <div id="checkout-payment-address">{{ payment_address }}</div>
          {% endif %}

          {% if shipping_address %}
            <div id="checkout-shipping-address">{{ shipping_address }}</div>
          {% endif %}

        </div>
        <div class="col-md-5 checkout-section checkout-section-end">
          {% if shipping_method %}
            <div id="checkout-shipping-method" class="mb-3">{{ shipping_method }}</div>
          {% endif %}
          <div id="checkout-payment-method" class="mb-4">{{ payment_method }}</div>

          <div id="checkout-confirm">{{ confirm }}</div>

        </div>
      </div>
    </div>
    {{ content_bottom }}
  </div>
  {{ column_right }}
</div>
{{ footer }}
