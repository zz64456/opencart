{{ header }}
{% if journal3.get('pageTitlePosition') == 'top' %}
  <h1 class="title page-title {{ journal3.get('title_color_scheme') }}">
    <span class="page-title-text">
      {{ heading_title }}
      {% if feed_url %}
        <a class="blog-feed" href="{{ feed_url }}" target="_blank"><span class="feed-text">{{ journal3.get('blogFeedText') }}</span></a>
      {% endif %}
    </span>
  </h1>
{% endif %}
{{ journal3_top }}
<div class="breadcrumbs {{ journal3.get('breadcrumbs_color_scheme') }}">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
</div>
<div class="container blog-home">
  <div class="row">{{ column_left }}
    <div id="content">
      {% if journal3.get('pageTitlePosition') == 'default' %}
        <h1 class="title page-title {{ journal3.get('title_color_scheme') }}">
          {{ heading_title }}
          {% if feed_url %}
            <a class="blog-feed" href="{{ feed_url }}" target="_blank"><span class="feed-text">{{ journal3.get('blogFeedText') }}</span></a>
          {% endif %}
        </h1>
      {% endif %}
      {{ content_top }}
      {% if category_description %}
      <div class="category-description">{{ category_description }}</div>
      {% endif %}
      {% if posts %}
        <div class="main-posts post-{{ journal3.get('globalPostView') }} {{ journal3.get('globalPostGridType') }}-grid">
          {{ posts }}
        </div>
        <div class="row pagination-results">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      {% else %}
        <p>{{ text_empty }}</p>
        <div class="buttons">
          <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ journal3_rich_snippets }}
{{ footer }}
