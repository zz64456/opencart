{% if (breadcrumbs) %} 
<ol class="breadcrumb">
	{% for breadcrumb in breadcrumbs %} 
		{% if (breadcrumb['href']) %} 
			<li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
		{% else %} 
			<li class="breadcrumb-item">{{ breadcrumb['text'] }}</ol>
		{% endif %} 
	{% endfor %} 
</ul>
{% endif %}